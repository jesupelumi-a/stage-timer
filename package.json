{
  "name": "stage-timer",
  "private": true,
  "version": "0.0.0",
  "type": "module",

  "scripts": {
    "dev": "concurrently \"pnpm run dev:frontend\" \"pnpm run dev:backend\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm run build:db && pnpm run build:backend && pnpm run build:frontend",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build:db": "pnpm --filter db build",
    "lint": "pnpm --filter frontend lint && pnpm --filter backend lint",
    "type-check": "pnpm --filter frontend type-check && pnpm --filter backend type-check",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules packages/*/node_modules",
    "clean:dist": "rm -rf frontend/dist backend/dist packages/*/dist"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "typescript": "~5.8.3"
  }
}
