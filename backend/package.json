    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.25.0",
    "globals": "^16.0.0",
